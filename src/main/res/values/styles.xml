<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3f4346</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--this App Theme first NOAction Bar or fullscreen Style-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--this App Theme 2 NOAction Bar or fullscreen Style-->
    <style name="AppTheme2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--TextBox Styles-->
    <style name="TextBoxSquareWhite">
        <item name="android:background">@drawable/white_square</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#656D78</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="TextBoxSquareWhite.BigText" parent="TextBoxSquareWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>

    <style name="TextBoxSquareWhite.SmallText" parent="TextBoxSquareWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
