<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/PD_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp" />

    <Button
        android:id="@+id/Intro_Skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent10"
        android:text="SKIP"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/PD_indicator"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_above="@id/Intro_Skip"
        android:layout_gravity="bottom"
        app:ci_drawable="@drawable/ic_circular_selected"
        app:ci_drawable_unselected="@drawable/ic_circle_unselect" />

</RelativeLayout>